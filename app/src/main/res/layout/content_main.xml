<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lee.projectrun.MainActivity"
    tools:showIn="@layout/activity_main"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">
    <!--android:background="@drawable/bgred"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tandem Learning App"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageApp"
        android:src="@drawable/kinglogo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtKingsLogin"
        android:maxLength="8"
        android:layout_below="@+id/imageApp"
        android:hint="King&apos;s ID"
        android:background="@drawable/edittextstyle"
        android:layout_alignRight="@+id/txtTitle"
        android:layout_alignEnd="@+id/txtTitle"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/txtKingsLogin"
        android:hint="Password"
        android:layout_alignLeft="@+id/txtKingsLogin"
        android:layout_alignStart="@+id/txtKingsLogin"
        android:layout_alignRight="@+id/txtKingsLogin"
        android:layout_alignEnd="@+id/txtKingsLogin"
        android:background="@drawable/edittextstyle"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:id="@+id/btnLogin"
        android:background="@drawable/buttonstyle"
        android:shadowColor="#2655D4"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/txtPassword"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need to Register?"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:id="@+id/btnRegister"
        android:background="@drawable/buttonstyle"
        android:shadowColor="#2655D4"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot Your Password?"
        android:id="@+id/txtForgotPassword"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fb0800"
        android:clickable="true"/>

</RelativeLayout>

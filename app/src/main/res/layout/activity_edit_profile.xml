<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="12dp">

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imgUser"
                    android:src="@drawable/default_avatar_add"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onClickAddImage"
                    android:layout_marginTop="12dp"
                    android:layout_weight="4"
                    android:foregroundGravity="bottom|right"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:onClick="onClickAddImage"/>

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="2"/>
            </LinearLayout>

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:hint="Full Name"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_sharp"
                android:padding="6dp"/>

            <EditText
                android:id="@+id/txtRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_sharp"
                android:padding="6dp"/>

            <EditText
                android:id="@+id/txtRegisterConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_sharp"
                android:padding="6dp"/>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtRegisterConfirmPassword"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="Gender"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16dp"/>

                    <RadioGroup
                        android:id="@+id/radioGroupGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioBtnFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Female"
                            android:textColor="@color/textColorSecondary"/>

                        <RadioButton
                            android:id="@+id/radioBtnMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Male"
                            android:textColor="@color/textColorSecondary"/>
                    </RadioGroup>
                </LinearLayout>

                <EditText
                    android:id="@+id/txtAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:textColor="#030303"
                    android:padding="6dp"
                    android:background="@drawable/bg_sharp"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages you can teach"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"/>

            <LinearLayout
                android:id="@+id/linLayLangTeach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="136dp"
                    android:layout_height="32dp"
                    android:text="Add language"
                    android:id="@+id/btnAddLangTeach"
                    android:background="@drawable/button_rounded"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:onClick="onClickAddLangTeach"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="4dp"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:text="Remove language"
                    android:id="@+id/btnRemoveLangTeach"
                    android:background="@drawable/button_rounded"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:onClick="onClickRemoveLangTeach"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages you want to learn"
                android:id="@+id/textView18"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"/>

            <LinearLayout
                android:id="@+id/linLayLangLearn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>

            <LinearLayout
                android:id="@+id/linLayButtons"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="136dp"
                    android:layout_height="32dp"
                    android:text="Add language"
                    android:id="@+id/btnAddLangLearn"
                    android:background="@drawable/button_rounded"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:onClick="onClickAddLangLearn"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="4dp"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:text="Remove language"
                    android:id="@+id/btnRemoveLangLearn"
                    android:background="@drawable/button_rounded"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:onClick="onClickRemoveLangLearn"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <EditText
                android:id="@+id/txtAbout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:gravity="top"
                android:hint="Tell people about yourself. What are some of your hobbies and interests?"
                android:inputType="textMultiLine"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:scrollbars="vertical"
                android:background="@drawable/bg_sharp"
                android:padding="6dp"/>

            <Button
                android:layout_width="136dp"
                android:layout_height="32dp"
                android:text="Save"
                android:id="@+id/btnConfirmSave"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="12dp"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:onClick="onClickSave"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
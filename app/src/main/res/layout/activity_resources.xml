<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollMain">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearScroll"
            android:paddingBottom="22dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onClickLink1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_globe"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore New Languages"
                        android:id="@+id/textView6"
                        android:textSize="18dp"
                        android:textColor="@color/textColorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See the difficulty, popularity, and uses of every major world language - as well as the culture and travel opportunities they can give"
                        android:id="@+id/textView9"
                        android:textSize="14dp"
                        android:textIsSelectable="false"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onClickLink2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_kcl"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kings&apos; Language Modules"
                        android:id="@+id/textView7"
                        android:textSize="18dp"
                        android:textColor="@color/textColorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover Kings&apos; language modules, which can be taken for a variety of languages for free along with most courses"
                        android:id="@+id/textView8"
                        android:textSize="14dp"
                        android:textIsSelectable="false"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onClickLink3">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_resources"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Langauge Resources Centre"
                        android:id="@+id/textView10"
                        android:textSize="18dp"
                        android:textColor="@color/textColorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find out about Kings&apos; Language Resources Center, which gives language help to any students, at any level"
                        android:id="@+id/textView11"
                        android:textSize="14dp"
                        android:textIsSelectable="false"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onClickLink4">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_duolingo"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duolingo"
                        android:id="@+id/textView12"
                        android:textSize="18dp"
                        android:textColor="@color/textColorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="An easy to use learning website and app, which runs through leveled speaking, listening, and writing tasks for major languages"
                        android:id="@+id/textView13"
                        android:textSize="14dp"
                        android:textIsSelectable="false"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onClickLink5">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_bbc"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBC Languages"
                        android:id="@+id/textView14"
                        android:textSize="18dp"
                        android:textColor="@color/textColorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A nice website for general for language resources, including activities, media, news, and starter guides"
                        android:id="@+id/textView15"
                        android:textSize="14dp"
                        android:textIsSelectable="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

